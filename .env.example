# Database
DATABASE_URL="postgresql://username:password@localhost:5432/animagenius?schema=public"
REDIS_URL="redis://localhost:6379"

# NextAuth.js Configuration
NEXTAUTH_URL="http://localhost:3000"
NEXTAUTH_SECRET="your-secret-key-here"

# OAuth Providers
GOOGLE_CLIENT_ID="your-google-client-id"
GOOGLE_CLIENT_SECRET="your-google-client-secret"
GITHUB_CLIENT_ID="your-github-client-id"
GITHUB_CLIENT_SECRET="your-github-client-secret"

# AI Service APIs
OPENAI_API_KEY="your-openai-api-key"
ANTHROPIC_API_KEY="your-anthropic-api-key"
ELEVENLABS_API_KEY="your-elevenlabs-api-key"

# Video Generation APIs
SYNTHESIA_API_KEY="your-synthesia-api-key"
HEYGEN_API_KEY="your-heygen-api-key"

# PayPal Configuration
PAYPAL_CLIENT_ID="your-paypal-client-id"
PAYPAL_CLIENT_SECRET="your-paypal-client-secret"
PAYPAL_WEBHOOK_ID="your-paypal-webhook-id"
PAYPAL_ENVIRONMENT="sandbox" # or "production"

# File Storage
AWS_ACCESS_KEY_ID="your-aws-access-key"
AWS_SECRET_ACCESS_KEY="your-aws-secret-key"
AWS_REGION="us-east-1"
AWS_S3_BUCKET="animagenius-storage"

# Email Service
SENDGRID_API_KEY="your-sendgrid-api-key"
FROM_EMAIL="noreply@animagenius.com"

# App Configuration
APP_URL="http://localhost:3000"
APP_NAME="AnimaGenius"
APP_VERSION="1.0.0"

# Admin Configuration
ADMIN_EMAIL="admin@animagenius.com"
ADMIN_PASSWORD="secure-admin-password"
ADMIN_API_KEY="admin-api-key-for-external-access"

# Security
JWT_SECRET="your-jwt-secret"
ENCRYPTION_KEY="your-encryption-key"
WEBHOOK_SECRET="your-webhook-secret"

# Monitoring
SENTRY_DSN="your-sentry-dsn"
PROMETHEUS_ENDPOINT="http://localhost:9090"

# Rate Limiting
RATE_LIMIT_MAX_REQUESTS="100"
RATE_LIMIT_WINDOW_MS="900000" # 15 minutes

# Feature Flags
FEATURE_PAYPAL_ENABLED="true"
FEATURE_ADMIN_DASHBOARD="true"
FEATURE_AI_PROCESSING="true"
FEATURE_PWA_ENABLED="true"